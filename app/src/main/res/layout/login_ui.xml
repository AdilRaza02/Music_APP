<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="0dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="0dp"

            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <EditText
            android:id="@+id/eRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Please Enter the Room No"
            android:inputType="textPersonName"
            android:paddingTop="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to go!" />

        <EditText
            android:id="@+id/eRoomAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Please Enter the Admin Key"
            android:inputType="textPersonName"
            android:paddingTop="20dp" />

        <Button
            android:id="@+id/buttonAdmin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Access"
            android:visibility="visible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a new Room" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="80dp"
            android:paddingBottom="00dp"
            android:text="Help?"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:text="All Copyrights Reserved." />

    </LinearLayout>

</LinearLayout>